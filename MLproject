name: LNCC-ARp-2025-1

docker_env:
  image: gnuoctave/octave:9.2.0


entry_points:
  train:
    parameters:
      train_data: path
      model: str
    command: "octave --no-gui --eval \"train('{train_data}', '{model}')\""
  predict:
    parameters:
      historic_data: path
      future_data: path
      model: str
      out_file: path
    command: "octave --no-gui --eval \"predict('{model}', '{historic_data}', '{future_data}', '{out_file}')\""

required_covariates: []

min_prediction_length: 1
max_prediction_length: 52

user_options:
  p:
    title: 'AR Model Order'
    type: 'integer'
    default: 92
  n_samples:
    title: 'Number of MC Samples'
    type: 'integer'
    default: 100
